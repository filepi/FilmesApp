<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="96dp"
        android:id="@+id/movie_item_image_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/movie_item_text_title"
        android:layout_alignTop="@+id/movie_item_image_poster"
        android:layout_toRightOf="@+id/movie_item_image_poster"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/movie_item_text_year"
        android:layout_below="@+id/movie_item_text_title"
        android:layout_toRightOf="@+id/movie_item_image_poster"
        android:layout_toEndOf="@+id/movie_item_image_poster" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_item_ratingBar"
        android:layout_below="@+id/movie_item_text_year"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>